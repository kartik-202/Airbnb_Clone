<%- layout("../boilerplate.ejs") %>

 
<div class="row mt-3">
    <div class="col-8 offset-3">
        <h1 class="col-8">SIGNUP ON THE PLATFORM</h1>
        <form action="/signup" method="post">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input 
                type="text"
                name="username" 
                id="username" 
                class="form-control"
                required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
                </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input 
            type="email"
            name="email" 
            id="email" 
            class="form-control"
            required>
            <div class="valid-feedback">
                Looks good!
              </div>
            </div>

            <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input 
            type="password"
            name="password" 
            id="password" 
            class="form-control"
            required>
            <div class="valid-feedback">
                Looks good!
              </div>
        </div>
        <button class="btn btn-success">signup</button>

        </form>



    </div>
</div>